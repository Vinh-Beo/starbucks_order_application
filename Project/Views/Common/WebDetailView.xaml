        <ScrollView
            Margin="0"
            Padding="0"
            BackgroundColor="#2F000000"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">
            <WebView
                Margin="0"
                Navigated="Handle_Navigated"
                Source="{Binding Url}" />
        </ScrollView>
